---
import ContactFormMain from "@components/ContactFormMain.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contact Us</Fragment>
      <Fragment slot="desc">Unite. Collaborate. Achieve.</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16 mb-32">
      <div>
        <h2 class="font-medium text-2xl text-gray-800">Get in touch with The Grovery</h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
          Reach out to discover how AllÄ“'s solutions can empower your team to grow, collaborate, and stay aligned every step of the way.
        </p>
        <div class="mt-5">
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:map-marker" />
            <span>
              1 N. Johnston Ave, Suite D204, Hamilton NJ 08609
            </span>
          </div>
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:envelope" />
            <a href="mailto:hello@thegrovery.com">hello@thegrovery.com</a>
          </div>
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:phone" />
            <a href="tel:+1 (987) 4587 899">+1 (987) 4587 899</a>
          </div>

          

        </div>
      </div>
      <div>
        <ContactFormMain />
      </div>
    </div>
  </Container>
</Layout>
